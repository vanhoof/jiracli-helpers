{
  "name": "jiracli-helpers-gui",
  "version": "0.1.0",
  "description": "Cross-platform GUI for JIRA CLI Helpers",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder",
    "preelectron-pack": "npm run build",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-mac": "npm run build && electron-builder --mac --publish=never",
    "dist-linux": "npm run build && electron-builder --linux --publish=never"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "ansi-to-html": "^0.7.2",
    "axios": "^1.6.2",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.8.0",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.jiracli.helpers",
    "productName": "JIRA CLI Helpers",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js",
      "../src/**/*.py",
      "../requirements*.txt"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "extraResources": [
      {
        "from": "../src",
        "to": "src",
        "filter": [
          "**/*.py"
        ]
      },
      {
        "from": "../requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "../requirements-dev.txt",
        "to": "requirements-dev.txt"
      }
    ]
  }
}
