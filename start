#!/bin/bash

# Simple startup script for the JIRA CLI Helpers desktop application

echo "ğŸš€ Starting JIRA CLI Helpers Desktop Application..."

# Check if Node.js is installed
if ! command -v node &> /dev/null; then
    echo "âŒ Node.js is not installed. Please install Node.js 18+ and try again."
    exit 1
fi

# Check if we're in the right directory
if [ ! -d "frontend" ]; then
    echo "âŒ Please run this script from the jiracli-helpers root directory."
    exit 1
fi

cd frontend

# Install dependencies if node_modules doesn't exist
if [ ! -d "node_modules" ]; then
    echo "ğŸ“¦ Installing dependencies..."
    npm install
fi

# Start the application
echo "ğŸ–¥ï¸  Launching desktop application..."
npm run electron-dev